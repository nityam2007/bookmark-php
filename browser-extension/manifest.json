{
  "manifest_version": 3,
  "name": "Bookmark Manager",
  "description": "Quickly save bookmarks to your Bookmark Manager with category selection",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg"
    },
    "default_title": "Save Bookmark",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background.js"
  }
}
